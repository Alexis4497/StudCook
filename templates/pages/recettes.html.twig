{% extends 'base.html.twig' %}

{% block head %}

    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
        <meta charset="utf-8">
            <title>Recette Test</title>

            {% block title %}Nos Recettes{% endblock %}

             {% block stylesheets %}

          <link rel="stylesheet" href="https://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
          <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
          <link rel="stylesheet" href="{{ asset('style/recettes_style.css') }}">

        {% endblock %}
        
    
        {% block javascripts %}
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>  
		<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>  

    </head>
    {% endblock %}
{% endblock %}


 {% block body %}

     
 

       <div class="container">       
            <h2>Les dernières recettes</h2>
            <div class="row flex">
                {% for r in recettes %}

        <div class="col-4">
                 <section class="cards">
        <article class="card card--1">
          <div class="card__info-hover">
              <div class="card__clock-info">
                <svg class="card__clock"  viewBox="0 0 24 24"><path d="M12,20A7,7 0 0,1 5,13A7,7 0 0,1 12,6A7,7 0 0,1 19,13A7,7 0 0,1 12,20M19.03,7.39L20.45,5.97C20,5.46 19.55,5 19.04,4.56L17.62,6C16.07,4.74 14.12,4 12,4A9,9 0 0,0 3,13A9,9 0 0,0 12,22C17,22 21,17.97 21,13C21,10.88 20.26,8.93 19.03,7.39M11,14H13V8H11M15,1H9V3H15V1Z" />
                </svg><span class="card__time">5 min</span>
              </div>
            
          </div>
          <div class="card__img"> <img class="img_recette" src={{r.getImageRecette() }}></img></div>
          <a href="#" class="card_link">
             <div class="card__img--hover"></div>
           </a>
          <div class="card__info">
            <span class="card__date"> Ajouté le 19/08/2022</span>
            <h3 class="card__title"> <a href="{{ path('show', {id: r.id}) }}">{{ r.titreRecette}}</h3>
            <span class="card__price"><a href="#" class="card__author" title="author">{{ r.prixRecette |  number_format(2, ',', ' ') }} €</a></span>
          </div>
        </article>


    </div>
                {% endfor %}
            </div>
            <div class="pagination">
                {{ knp_pagination_render(recettes) }}
            </div>

        </div>                                  

     
{% endblock %}

