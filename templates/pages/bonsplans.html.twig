{% extends 'base.html.twig' %}

{% block title %}Nos Bons Plans{% endblock %}

 {% block body %}

       <div class="container">
           <div class="class_typewrite">
                <h1>
                    <a id="type_writer"class="typewrite" data-period="2000" data-type='[ "Bienvenue sur nos Bons Plans !" ]'>
                        <span class="wrap"></span>
                    </a>
                </h1>
            </div>

            <div class="row flex">
                {% for b in bonsplans %}
                    <div class="col-3">
                        <div>
                            <div class ="card-body">
                                <h5 class="card-title">
                                    {# {{b.id}} #} {{ b.nomBonPlan }}
                                </h5>
                                    <img class="img_bonsplans" src={{ b.getLienImageBonPlan() }}></img>
 

                                        <p class="card-text">{{ b.description}}</p>
                                        <div class="text-primary"> <a href="{{b.lienBonPlan}}">{{b.lienBonPlan}}</a></div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

      
{% endblock %}
