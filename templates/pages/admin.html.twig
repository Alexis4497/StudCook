{% extends 'base.html.twig' %}

{% block title %}Admin Recettes{% endblock %}

 {% block body %}
 
    <div class="container mt-4">

        <h1>Gérer les recettes</h1>


        {% for message in app.flashes('success') %}

            <div class="alert alert-success">
                {{ message }}
            </div>
            
        {% endfor %}
        
        <div class="text-right">
            <a href="{{ path('recette.create') }}" class="btn btn-primary">Ajouter une nouvelle Recette</a>

        </div>

        <table class="table table-striped"
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
             {% for r in recettes %}
                           
                <tr>
                    <td>{{ r.titreRecette }}</td>
                    <td>
                        <a href="{{ path('edit', {id: r.id}) }}" class="btn btn-secondary">Editer</a>
                        <form method="post" action="{{ path('delete', {id: r.id}) }}" style="display:inline-block" 
                        onsubmit="return confirm('Êtes vous vraiment sûr de vouloir supprimer cette recette ?')">
                        
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger"> Supprimer </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        

     
               
      
{% endblock %}

